<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:Tools="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/exercise_routine_list_design"
    android:layout_margin="15dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <TextView
        android:id="@+id/exercise_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="부제목"
        android:textSize="10sp"
        android:layout_marginLeft="15dp"

        android:textColor="#CBD3FF"

        />
    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="주제목"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"


        android:textColor="#fff"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/set_recyclerview"
        android:background="@drawable/exercise_routine_title_stroke_design"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/doing_exercise_set_list"

        />


</LinearLayout>


</LinearLayout>