<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".exercise.custompage01.add_routine_page"
    android:background="@drawable/exercise_new_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--  <Space-->
        <!--      android:layout_width="match_parent"-->
        <!--      android:layout_height="0dp"-->
        <!--      android:layout_weight="63"-->
        <!--      />-->
        <!--상단메뉴-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

            android:layout_weight="47"

            android:layout_marginHorizontal="10dp"
            android:background="@drawable/exercise_custompages_upper_title_stroke"
            >


            <!--
            <TextView
                          android:id="@+id/cancelicon"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="취소"
                          android:textColor="#fff"
                          android:gravity="center"
                          android:textSize="20sp"
                          android:layout_weight="2"


                          android:textAlignment="center"
                          />
            -->

            <TextView
                android:id="@+id/cancelicon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="취소"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="10dp"

                />

            <!--
            <TextView
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:text="Add routine"
                          android:textColor="#fff"
                          android:textSize="20sp"
                          android:gravity="center"
                          android:layout_weight="8"
                          android:textAlignment="center"
                          />
            -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="운동 시간"
                    android:textColor="#98A6BA"
                    android:gravity="center_horizontal|bottom"
                    />


                <TextView
                    android:id="@+id/exercise_uptime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="00:00:00"
                    android:textColor="#E7F1FF"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:textSize="20sp"



                    />
            </LinearLayout>


            <!--
            <TextView
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="2"
                          android:textSize="20sp"
                          android:gravity="center"

                          android:textAlignment="center"

                          />
            -->

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>
        <!--       커스텀 4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            >
            <TextView
                android:id="@+id/presetName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:text="개똥이의 아침운동"

                android:textColorHint="#696E74"
                android:gravity="center_vertical"

                android:textSize="20sp"
                android:textColor="#657CFF"
                android:inputType="text"
                android:textStyle="bold"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/doing_exercise_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="445"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation ="vertical"
            tools:listitem="@layout/doing_exercise_list"



            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:textColor="#757BE1"
            android:textAlignment="center"
            android:textSize="10sp"
            android:gravity="center"
            android:text="+ 버튼을 눌러 나만의 운동루틴을 만들어보세요"/>


        <!--      총 0코스 / 0h 0m-->


